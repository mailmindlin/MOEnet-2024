{
	"$schema": "./schema.json",
	"description": "Run SLAM on a single camera, using the 2024 field",
	"timer": "system",
	"log": {
		"level": "DEBUG"
	},
	"datalog": {
		"enabled": true,
		"folder": "./log"
	},
	"nt": {
		"enabled": true,
		"team": 365,
		"host": "localhost",
		"publishConfig": false,
		"publishDetections": false,
		"publishSystemInfo": false,
		"publishPing": true,
		"tfFieldToOdom": "sub",
		"tfFieldToRobot": "pub",
		"tfOodomToRobot": "pub",
		"publishField2dF2R": true
	},
	"pipelines": [
		{
			"id": "slam",
			"stages": [
				{
					"stage": "slam",
					"slam": true,
					"vio": true,
					"apriltags": {
						"format": "wpi",
						"path": "./apriltag/2024-crescendo.json",
						"tagFamily": "tag36h11",
						"tagSize": 0.1651
					}
				}
			]
		}
	],
	"cameras": [
		{
			"id": "S2",
			"selector": { "ordinal": 1 },
			"pose": {
				"translation": {
					"x": 0,
					"y": 0,
					"z": 0
				},
				"rotation": {
					"quaternion": {
						"W": 1,
						"X": 0,
						"Y": 0,
						"Z": 0
					}
				}
			},
			"pipeline": "slam"
		}
	]
}