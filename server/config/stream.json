{
	"$schema": "./schema.json",
	"description": "Stream video to a file",
	"timer": "system",
	"log": {
		"level": "DEBUG"
	},
    "web": {
        "enabled": true,
        "port": 8080
    },
	"pipelines": [
		{
			"id": "stream-left",
			"stages": [
				{
					"stage": "web",
					"target": "left",
					"maxFramerate": 30
				}
			]
		}
	],
	"cameras": [
		{
			"id": "Default",
			"selector": { "ordinal": 1 },
			"pose": {
				"rotation": {
					"quaternion": {
						"W": 1,
						"X": 0,
						"Y": 0,
						"Z": 0
					}
				},
				"translation": {
					"x": 0,
					"y": 0,
					"z": 0
				}
			},
			"pipeline": [
				{
					"stage": "web",
					"target": "left",
					"maxFramerate": 30
				},
				{
					"stage": "web",
					"target": "right",
					"maxFramerate": 30
				},
				{
					"stage": "web",
					"target": "rgb",
					"maxFramerate": 30
				}
			],
			"retry": {
				"connection_tries": 0,
				"restart_tries": 0
			}
		}
	]
}